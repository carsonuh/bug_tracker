<%
  if (user.id) {
    submitLabel = "Update User";
    route = `/users/${user.id}`;
  } else {
    submitLabel = "Create User";
    route = "/users";
  }
%>
    <% if (user.errors.length > 0) { %>
        <% console.log("Found errors"); console.log(user.errors); %>
            <div>
                <p>Errors:</p>
                <ul>
                    <%- user.errors.map((item) => `<li>${item}</li>` ).join("\n"); %>
                </ul>
            </div>
            <% } %>

                <form action="<%=route%>" accept-charset="UTF-8" method="post">
                    <div class="field">
                        <label for="user_lname">Last name</label>
                        <input type="text" name="user[lname]" id="user_lname" value="<%= user.lname %>" size="40"/>
                    </div>

                    <div class="field ">
                        <label for="user_fname ">First name</label>
                        <input type="text" name="user[fname]" id="user_fname" value="<%= user.fname %>" size="40"/>
                    </div>

                    <div class="field ">
                      <label for="user_email">Email</label>
                      <input type="email" name="user[email]" id="user_email" value="<%= user.email %>" size="40"/>
                    </div>

                    <div class="field">
                      <label for="user_pic">Picture</label>
                      <input type="text" name="user[pic]" id="user_pic" value="<%= user.pic %>" size="40"/>
                  </div>

                    <div class="actions ">
                        <input type="submit" name="commit" value="<%= submitLabel %>" />
                    </div>
                </form>
