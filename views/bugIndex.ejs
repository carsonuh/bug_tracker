<html>

<body>
    <h1>Bugs</h1>

    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Issue Type</th>
            <th>Priority</th>
            <th>Status</th>
            <th></th>
        </tr>

        <% bugs.forEach( (bug) => { %>
            <tr>
                <td>
                    <%= bug.title %>
                </td>
                <td>
                    <%= bug.description %>
                </td>
                <td>
                    <%= bug.issue_type %>
                </td>
                <td>
                    <%= bug.priority %>
                </td>
                <td>
                    <%= bug.status %>
                </td>
                <td>
                    <a href="/bugs/<%= bug.id %>">Show</a>
                    <a href="/bugs/<%= bug.id %>/edit">Edit</a>
                    <a href="/bugs/<%= bug.id %>/delete">Delete<a>

                </td>
                <% }) %>
            </tr>
    </table>
</body>

<a href="/bugs/new">New</a>

</html>
